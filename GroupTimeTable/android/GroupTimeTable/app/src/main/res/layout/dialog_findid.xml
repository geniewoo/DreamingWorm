<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/findIDDialog_Layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="130dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearLayout">

            <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
                android:id="@+id/findIDDialog_EditText_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone : " />

            <dreamingworm.grouptimetable.CustomViews.CustomEditText1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/findIDDiaglog_Phone_Edt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <dreamingworm.grouptimetable.CustomViews.CustomButtonGreen
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="찾기"
                android:id="@+id/findIDDiaglog_Find_Btn"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>