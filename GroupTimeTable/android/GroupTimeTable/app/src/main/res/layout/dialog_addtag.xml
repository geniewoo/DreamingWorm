<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
                android:id="@+id/findIDDialog_EditText_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tag : " />

            <dreamingworm.grouptimetable.CustomViews.CustomEditText1
                android:id="@+id/addTagDiaglog_Tag_Edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100px"
            android:orientation="horizontal">

            <dreamingworm.grouptimetable.CustomViews.CustomButtonGreen
                android:id="@+id/addTagDiaglog_Summit_Btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="등록" />

            <dreamingworm.grouptimetable.CustomViews.CustomButtonGreen
                android:id="@+id/addTagDiaglog_Cancel_Btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="취소" />

            />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>