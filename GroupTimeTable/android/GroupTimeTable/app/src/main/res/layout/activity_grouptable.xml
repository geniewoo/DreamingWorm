<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupTable_Drawer_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupTable_Name_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/groupTable_Days_Layout"
                android:layout_width="280dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/groupTable_Sun_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="일"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/groupTable_Mon_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="월"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/groupTable_Tue_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="화"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/groupTable_Wed_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="수"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/groupTable_Thu_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="목"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/groupTable_Fri_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="금"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/groupTable_Sat_Txt"
                    android:layout_width="41dp"
                    android:layout_height="fill_parent"
                    android:text="토"
                    android:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupTable_Container_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/groupTable_Days_Layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/groupTable_Times_Layout"
                    android:layout_width="25dp"
                    android:layout_height="448dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/groupTable_Days_Layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/groupTable_8_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="8"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_9_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="9"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_10_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="10"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_11_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="11"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_12_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="12"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_13_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="13"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_14_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="14"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_15_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="15"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_16_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="16"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_17_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="17"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_18_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="18"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_19_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="19"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_20_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="20"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/groupTable_21_Txt"
                        android:layout_width="25dp"
                        android:layout_height="32dp"
                        android:paddingTop="1dp"
                        android:text="21"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/groupTable_Menu_List"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>