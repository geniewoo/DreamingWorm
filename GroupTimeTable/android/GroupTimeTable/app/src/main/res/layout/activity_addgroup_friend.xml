<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <dreamingworm.grouptimetable.CustomViews.CustomEditText1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="6"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="25dp"
            android:id="@+id/addGroup_AddFriend_Edt"
            android:hint="친구 검색" />

        <ListView
            android:id="@+id/addGroup_AddFriend_ListView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/addGroup_AddFriend_Txt"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <dreamingworm.grouptimetable.CustomViews.CustomButtonOrange
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="추가"
                android:textSize="23dp"
                android:id="@+id/addGroup_AddFriend_Btn"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_toEndOf="@+id/addGroup_AddFriend_Txt"
                android:layout_margin="5dp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>