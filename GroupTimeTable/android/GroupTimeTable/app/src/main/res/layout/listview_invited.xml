<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/invited_RoomName_Txt"
                android:textSize="30dp"
                android:text="방제" />

            <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/invited_HostName_Txt"
                android:textSize="16dp"
                android:text="초대한 사람"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/linearLayout2"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/linearLayout2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">

                <dreamingworm.grouptimetable.CustomViews.CustomButtonTransparent
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/invited_Confirm_Btn"
                    android:text="추가"
                    android:textSize="15dp" />

                <dreamingworm.grouptimetable.CustomViews.CustomButtonTransparent
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/invited_Refuse_Btn"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="삭제"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>