<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/friend_Image_View"
            android:layout_margin="5dp" />

        <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/friend_Name_Txt"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <dreamingworm.grouptimetable.CustomViews.CustomContentTextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/friend_Nickname_txt"
            android:textSize="16dp"
            android:textColor="#666666"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <dreamingworm.grouptimetable.CustomViews.CustomButtonOrange
            android:id="@+id/friend_Tag_Btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>