<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dreamingworm.grouptimetable">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/NoAppTheme"
        android:debuggable="false"
        tools:ignore="HardcodedDebugMode">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register" >
        </activity>
        <activity
            android:name=".AddTableActivity"
            android:label="AddTable" >
        </activity>
        <activity android:name=".SwitcherActivity"
            android:label="Switcher">
        </activity>
        <activity android:name=".AddGroupActivity"
            android:label="AddGroup">
        </activity>
        <activity android:name=".AddGroupFriendActivity"
            android:label="AddGroup">
        </activity>
        <activity android:name=".ProfileActivity"
            android:label="Profile">
        </activity>
        <activity android:name=".AddFriendActivity"
            android:label="AddFriend">
        </activity>
        <activity android:name=".GroupTableActivity"
            android:label="GroupTable"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".InvitedActivity"
            android:label="Invited">
        </activity>
        <activity android:name=".AddMeFriendActivity"
            android:label="Addme"></activity>
        <activity android:name=".GroupSettingActivity"
            android:label="GroupSetting"></activity>
        <activity android:name=".BugReportActivity"
            android:label="BugReport"></activity>
        <activity android:name=".FriendImageActivity"
            android:label="FriendImage"></activity>
    </application>

</manifest>